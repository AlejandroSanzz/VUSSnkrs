<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Manage.eliminar.EliminarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_aviso"
            android:layout_width="231dp"
            android:layout_height="38dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="200dp"
            android:text="Introduce el ID correspondiente al producto que desea eliminar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Introduce el ID"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_aviso" />

        <Button
            android:id="@+id/btn_eliminar"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FF0A0A"
            android:onClick="eliminarProducto"
            android:text="@string/txt_eliminar_producto"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextID" />
    </LinearLayout>

</FrameLayout>